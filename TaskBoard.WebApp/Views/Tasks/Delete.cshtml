@model TaskViewModel

@{
    ViewData["Title"] = "Usuń zadanie";
}

<link href="~/css/style.css" rel="stylesheet" type="text/css" />

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
    <table class="tasks-entry form">
        <tr>
            <th>
                <label asp-for="Title" class="control-label">Tytuł</label>
            </th>
            <td>
                <input asp-for="Title" class="form-control" disabled="disabled" />
            </td>
        </tr>
        <tr>
            <th>
                <label asp-for="Description" class="control-label">Opis</label>
            </th>
            <td>
                <textarea asp-for="Description" class="form-control" disabled="disabled"></textarea>
            </td>
        </tr>
    </table>
    <input type="submit" value="Usuń" class="btn btn-primary" />
</form>


